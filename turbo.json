{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "client#build": {
      "dependsOn": [
        "^build",
        "$NEXT_PUBLIC_API_ENDPOINT"
      ],
      "outputs": [
        ".next/**"
      ]
    },
    "server#build": {
      "dependsOn": [
        "^build",
        "$NODE_ENV",
        "$COOKIE_DOMAIN",
        "$CORS_ORIGIN",
        "$DATABASE_URL",
        "$TEST_DATABASE_URL",
        "$PORT"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "test": {
      "outputs": []
    },
    "test:e2e": {
      "dependsOn": [
        "lint",
        "build"
      ],
      "env": [
        "CI"
      ],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "start": {
      "cache": false
    }
  }
}