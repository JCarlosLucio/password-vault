{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "client#build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "NEXT_PUBLIC_API_ENDPOINT"
      ],
      "outputs": [
        ".next/**"
      ]
    },
    "server#build": {
      "dependsOn": [
        "^build"
      ],
      "env": [
        "NODE_ENV",
        "COOKIE_DOMAIN",
        "CORS_ORIGIN",
        "DATABASE_URL",
        "TEST_DATABASE_URL",
        "PORT"
      ],
      "outputs": [
        "dist/**"
      ]
    },
    "test": {
      "outputs": []
    },
    "test:e2e": {
      "dependsOn": [
        "build"
      ],
      "env": [
        "CI"
      ],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "start": {
      "dependsOn": [
        "lint",
        "build"
      ],
      "cache": false
    },
    "start:test": {
      "dependsOn": [
        "lint",
        "build"
      ],
      "cache": false
    }
  }
}