{
  "name": "password-vault",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "start:test": "turbo run start:test",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "test:e2e": "pnpm exec playwright test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@playwright/test": "^1.35.0",
    "@repo/eslint-config-custom": "workspace:*",
    "@types/node": "^24.3.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "2.8.8",
    "turbo": "latest"
  },
  "dependencies": {},
  "engines": {
    "node": ">=22.x"
  },
  "packageManager": "pnpm@10.15.1",
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}