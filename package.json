{
  "name": "password-vault",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "start": "turbo run start",
    "start:test": "turbo run start:test",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "test:e2e": "pnpm exec playwright test",
    "lint": "turbo run lint --continue",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@repo/eslint-config-custom": "workspace:*",
    "@types/node": "^24.5.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "3.6.2",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=22.x"
  },
  "packageManager": "pnpm@10.17.0",
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}