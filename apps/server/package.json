    "argon2": "^0.44.0",
    "dotenv": "^16.1.4",
    "fastify": "^4.18.0",
    "mongoose": "^7.2.4",
    "pino": "^8.14.1"
  },
  "devDependencies": {
    "@repo/eslint-config-custom": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.0.0",
    "eslint": "9.35.0",
