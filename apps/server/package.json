    "argon2": "^0.44.0",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "mongoose": "^8.20.2",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@repo/eslint-config-custom": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/node": "^25.0.2",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.1.0",
